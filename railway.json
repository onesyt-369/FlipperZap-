{
  "deploy": { "restartPolicyType": "ON_FAILURE" },
  "services": [
    {
      "name": "api",
      "source": {
        "rootDirectory": "api"
      },
      "build": { "builder": "DOCKERFILE" },
      "envVariables": [
        "OPENAI_API_KEY",
        "ANTHROPIC_API_KEY",
        "GEMINI_API_KEY",
        "NODE_ENV"
      ]
    },
    {
      "name": "web",
      "source": {
        "rootDirectory": "web"
      },
      "build": { "builder": "DOCKERFILE" },
      "envVariables": [
        "NEXT_PUBLIC_API_URL",
        "NODE_ENV"
      ]
    }
  ]
}