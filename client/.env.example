# =============================================================================
# FlipperZap Frontend Environment Configuration
# =============================================================================

# API Configuration
VITE_API_BASE=http://localhost:5000
VITE_APP_NAME=FlipperZap
VITE_APP_VERSION=1.0.0

# Demo Mode (default to enabled for zero-config startup)
VITE_DEMO_MODE=true
VITE_DEMO_USER_ID=demo-user

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_CAMERA=true
VITE_ENABLE_OFFLINE_MODE=true

# External Services (only needed when not using demo mode)
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Affiliate Tags (environment-driven)
VITE_AFFILIATE_AMZ_TAG=yourid-20
VITE_AFFILIATE_EBAY_CAMPID=123456
VITE_AFFILIATE_EBAY_CUSTOMID=FZ

# App Store URLs
VITE_IOS_APP_STORE_URL=https://apps.apple.com/app/flipperzap/id123456789
VITE_ANDROID_PLAY_STORE_URL=https://play.google.com/store/apps/details?id=com.flipperzap.app

# Support & Legal
VITE_SUPPORT_EMAIL=support@flipperzap.com
VITE_SUPPORT_URL=https://flipperzap.com/support
VITE_PRIVACY_POLICY_URL=https://flipperzap.com/privacy
VITE_TERMS_OF_SERVICE_URL=https://flipperzap.com/terms

# Rate Limiting (Client-side display)
VITE_MAX_SCANS_PER_HOUR=10
VITE_MAX_LISTINGS_PER_DAY=5