# =============================================================================
# ToyResaleWizard Environment Configuration
# =============================================================================

# Application Configuration
NODE_ENV=development
PORT=5000
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,https://web-production-1b22c.up.railway.app
VITE_API_BASE=http://localhost:5000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/toyresalewizard

# AI Analysis Provider (Options: openai, mock)
ANALYSIS_PROVIDER=mock
OPENAI_API_KEY=your_openai_api_key_here

# Pricing Provider (Options: market_api, mock) 
PRICING_PROVIDER=mock
MARKET_API_KEY=your_market_api_key_here

# Email Provider (Options: smtp, mock)
EMAIL_PROVIDER=mock
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Payments Provider (Options: stripe, mock)
PAYMENTS_PROVIDER=mock
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Marketplace Integrations
# eBay Configuration
EBAY_CLIENT_ID=your_ebay_client_id
EBAY_CLIENT_SECRET=your_ebay_client_secret
EBAY_REDIRECT_URI=https://yourapp.com/auth/ebay/callback
EBAY_AFFILIATE_TAG=your_affiliate_tag

# Amazon Configuration  
AMAZON_ACCESS_KEY=your_amazon_access_key
AMAZON_SECRET_KEY=your_amazon_secret_key
AMAZON_MARKETPLACE_ID=ATVPDKIKX0DER
AMAZON_AFFILIATE_TAG=your_affiliate_tag

# WordPress/WooCommerce Configuration
WORDPRESS_SITE_URL=https://yoursite.com
WORDPRESS_CONSUMER_KEY=ck_your_consumer_key
WORDPRESS_CONSUMER_SECRET=cs_your_consumer_secret

# Feature Flags
USE_MOCK_AI=true
USE_MOCK_MARKETPLACE=true
USE_MOCK_EMAIL=true
USE_MOCK_PAYMENTS=true

# Security & Session
SESSION_SECRET=your_long_random_session_secret_here_minimum_32_characters
JWT_SECRET=your_jwt_secret_here

# External Services
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=https://your_sentry_dsn_here

# Rate Limiting
MAX_SCANS_PER_HOUR=10
MAX_LISTINGS_PER_DAY=5
MAX_MESSAGES_PER_DAY=10

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Health Check Configuration
HEALTH_CHECK_TOKEN=your_health_check_token