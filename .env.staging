# =============================================================================
# FlipperZap Staging Environment Configuration
# =============================================================================

# Environment
NODE_ENV=production
APP_ENV=demo

# API Configuration
PORT=5000
API_BASE_URL=https://api-staging.flipperzap.com

# CORS Configuration
CORS_ORIGINS=https://staging.flipperzap.app,capacitor://localhost,http://localhost,https://flipperzap.com

# Demo Mode Providers (staging uses mock for safety)
ANALYSIS_PROVIDER=mock
PRICING_PROVIDER=mock
EMAIL_PROVIDER=log
PAYMENTS_PROVIDER=demo

# Mock Service Flags
USE_MOCK_AI=true
USE_MOCK_MARKETPLACE=true
USE_MOCK_EMAIL=true
USE_MOCK_PAYMENTS=true

# Affiliate Configuration
AFFILIATE_AMZ_TAG=flipperzap-20
AFFILIATE_EBAY_CAMPID=123456
AFFILIATE_EBAY_CUSTOMID=FZ

# Database (Railway will provide this)
DATABASE_URL=postgresql://postgres:password@localhost:5432/flipperzap_staging

# Session Configuration
SESSION_SECRET=staging-secret-key-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined